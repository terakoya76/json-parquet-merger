{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      groupName: 'github actions',
      matchManagers: [
        'github-actions',
      ],
    },
    {
      "groupName": "nodejs-modules-minor-patch-updates",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
      // automerge: true,
      // platformAutomerge: true
    }
  ]
}
