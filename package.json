{
  "name": "json-parquet-merger",
  "version": "0.3.2",
  "description": "TypeScript CLI tool for merging multiple JSON files of the same format into a single Parquet file",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "json-parquet-merger": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "cli": "tsx src/index.ts",
    "clean": "gts clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "pnpm lint:gts && pnpm lint:tsr",
    "lint:gts": "gts fix",
    "lint:tsr": "tsr -w ./src ./script"
  },
  "dependencies": {
    "@dsnp/parquetjs": "^1.8.7",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "glob": "^11.0.0",
    "tsr": "^1.3.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint-plugin-n": "^17.14.0",
    "gts": "^6.0.2",
    "memfs": "^4.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
